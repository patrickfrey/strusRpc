# Maintainer: Patrick Frey <patrickpfrey@yahoo.com> 

pkgname=strusrpc
_mainpkgver=0.1.9
pkgver=${_mainpkgver}
pkgrel=1
pkgdesc='This Project implements proxy classes for the strus storage and analyzer interfaces that forward all calls to strus to an RPC server (strusRpcServer).'
license=('GPL3')
arch=('i686' 'x86_64')
url="http://project-strus.net"
depends=('boost>=1.53' 'boost-libs>=1.53' "strus>=0.1.6" "strusanalyzer>=0.1.6" "strusmodule>=0.1.5")
makedepends=('cmake')
source=("${pkgname}-${_mainpkgver}.tar.gz")

build() {
  cd ${srcdir}/${pkgname}-${_mainpkgver}

  msg "Building..."
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DLIB_INSTALL_DIR=lib ..
  make
}

package() {
  cd ${srcdir}/${pkgname}-${_mainpkgver}

  msg "Installing.."
  cd build
  make DESTDIR=${pkgdir} install
}

check() {
  cd ${srcdir}/${pkgname}-${_mainpkgver}

  msg "Testing..."
  cd build
  make test
}
