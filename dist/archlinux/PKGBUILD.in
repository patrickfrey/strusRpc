pkgname=strusrpc
_deppkgver=@STRUS_MAJOR_VERSION@.@STRUS_MINOR_VERSION@
_mainpkgver=@STRUS_VERSION@
pkgver=${_mainpkgver}
pkgrel=1
pkgdesc='This Project implements proxy classes for the strus storage and analyzer interfaces that forward all calls to strus to an RPC server (strusRpcServer).'
license=('MPL2')
arch=('i686' 'x86_64')
url="http://project-strus.net"
depends=('boost>=1.57' 'boost-libs>=1.57' "strusbase>=${_deppkgver}" "strus>=${_deppkgver}" "strusanalyzer>=${_deppkgver}" "strustrace>=${_deppkgver}" "strusmodule>=${_deppkgver}")
makedepends=('cmake')
source=("${pkgname}-${_mainpkgver}.tar.gz")

build() {
  cd ${srcdir}/${pkgname}-${_mainpkgver}

  msg "Building..."
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DLIB_INSTALL_DIR=lib ..
  make
}

package() {
  cd ${srcdir}/${pkgname}-${_mainpkgver}

  msg "Installing.."
  cd build
  make DESTDIR=${pkgdir} install
}

check() {
  cd ${srcdir}/${pkgname}-${_mainpkgver}

  msg "Testing..."
  cd build
  make test
}
